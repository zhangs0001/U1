<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TitleBar">
        <attr name="display_style">
            <enum name="main" value="0" />
            <enum name="back" value="1" />
            <enum name="main_all" value="2" />
        </attr>
        <attr name="displayname" format="string" />
        <attr name="left_btn" format="reference" />
        <attr name="right_btn" format="reference" />
        <attr name="editTextStyle" format="reference" />
    </declare-styleable>
    <declare-styleable name="InputView">
        <attr name="type" format="integer"/>
        <attr name="title" format="string"/>
        <attr name="hint" format="string"/>
        <attr name="digits" format="string"/>
        <attr name="maxLength" format="integer"/>
        <attr name="showtitle" format="boolean"/>
        <attr name="must" format="boolean"/>
        <attr name="english" format="boolean"/>
        <attr name="leftStr" format="string"/>
        <attr name="controlNo" format="string"/>
        <attr name="inputType" format="enum">
            <enum name="phone" value="0" />
            <enum name="number" value="1" />
            <enum name="password" value="2" />
            <enum name="nospaces" value="3" />
        </attr>
    </declare-styleable>


    <attr name="selectedTextColor" format="color"/>

    <declare-styleable name="DoubleSwitchView">
        <attr name="leftSelected" format="boolean"/>
        <attr name="leftText" format="string"/>
        <attr name="rightText" format="string"/>
        <attr name="selectedTextColor"/>
        <attr name="unselectedTextColor" format="color"/>
        <attr name="selectedBackground" format="reference|color"/>
        <attr name="unselectedBackground" format="reference|color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
            <flag name="bold_italic" value="3" />
        </attr>
    </declare-styleable>
</resources>