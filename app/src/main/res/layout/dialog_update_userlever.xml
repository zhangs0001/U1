<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_level_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/silver_hint_img" />

    <TextView
        android:id="@+id/tv_level_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="12dp"
        android:gravity="center"
        android:text="@string/user_level_silver_hint"
        android:textColor="#FFDB31"
        android:textSize="@dimen/textSize17"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/tv_dialog_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_silver_bg"
        android:gravity="center"
        android:text="@string/a136"
        android:textColor="#514300"
        android:textSize="@dimen/textSize17" />

</LinearLayout>