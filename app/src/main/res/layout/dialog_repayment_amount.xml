<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round_white_big"
    android:orientation="vertical">
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_close"
        android:layout_gravity="right"
        android:layout_margin="5dp"
        android:id="@+id/iv_close"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="@string/dialog_tv28"
        android:textSize="17dp"
        android:textColor="@color/color_000000"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>
    <FrameLayout
        android:layout_width="263dp"
        android:layout_height="45dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_repayment_amount_border">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_tv29"
            android:textColor="@color/color_3d3d3d"
            android:textSize="19dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="25dp"/>
        <EditText
            android:id="@+id/ed_amount"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:layout_marginStart="75dp"
            android:layout_marginEnd="15dp"
            android:textColor="@color/color_3d3d3d"
            android:textSize="19dp"
            android:textStyle="bold"
            android:inputType="number"
            android:background="@null"/>
    </FrameLayout>
    <TextView
        android:id="@+id/tv_amount_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:textColor="#cb1b1b"
        android:layout_marginTop="7dp"
        android:visibility="invisible"
        android:text="@string/dialog_tv30"
        android:layout_gravity="center_horizontal"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="25dp"
        android:background="#dedede"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_repayment_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dialog_tv33"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:textColor="@color/color_474747"
            android:textSize="19dp"
            android:gravity="left"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#dedede"/>
        <TextView
            android:id="@+id/tv_electronic_wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dialog_tv32"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:textColor="@color/color_474747"
            android:textSize="19dp"
            android:gravity="left"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#dedede"/>
        <TextView
            android:id="@+id/tv_bank_card"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dialog_tv31"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textStyle="bold"
            android:textColor="@color/color_474747"
            android:textSize="19dp"
            android:paddingLeft="10dp"
            android:gravity="left"/>
    </LinearLayout>
</LinearLayout>