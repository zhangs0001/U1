<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:src="@drawable/phone_img" />

    <LinearLayout
        android:id="@+id/ll_confirm_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/verify_phone_hint"
            android:textColor="@color/text_main"
            android:textSize="@dimen/textSize18" />

        <TextView
            android:id="@+id/tv_get_sms_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/shape_blue"
            android:paddingLeft="22dp"
            android:paddingTop="12dp"
            android:paddingRight="22dp"
            android:paddingBottom="12dp"
            android:text="@string/get_code"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize14"
            android:textStyle="bold"
            android:paddingStart="22dp"
            android:paddingEnd="22dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_get_sms_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/a57"
            android:textColor="@color/theme_color_main"
            android:textSize="@dimen/textSize18"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/et_sms_confirm_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@null"
            android:hint="______"
            android:inputType="number"
            android:maxLength="6"
            android:textColor="@color/text_main"
            android:textColorHint="@color/text_main"
            android:textSize="30sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/shape_blue"
            android:paddingLeft="45dp"
            android:paddingTop="12dp"
            android:paddingRight="45dp"
            android:paddingBottom="12dp"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize14"
            android:textStyle="bold"
            android:paddingEnd="45dp"
            android:paddingStart="45dp" />

        <TextView
            android:id="@+id/tv_get_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/get_code"
            android:textColor="@color/theme_color_main"
            android:textSize="@dimen/textSize16"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>