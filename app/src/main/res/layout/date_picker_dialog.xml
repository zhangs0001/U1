<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal">

    <com.aigestudio.wheelpicker.WheelPicker
        android:id="@+id/date_month"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_weight="1"
        app:wheel_atmospheric="true"
        app:wheel_cyclic="true"
        app:wheel_item_align="center"
        app:wheel_item_space="16dp"
        app:wheel_item_text_size="30sp"
        app:wheel_selected_item_text_color="@color/theme_color_main"
        app:wheel_visible_item_count="5"
        android:layout_marginEnd="16dp" />

    <com.aigestudio.wheelpicker.WheelPicker
        android:id="@+id/date_day"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_weight="1"
        app:wheel_atmospheric="true"
        app:wheel_cyclic="true"
        app:wheel_item_align="center"
        app:wheel_item_space="16dp"
        app:wheel_item_text_size="30sp"
        app:wheel_selected_item_text_color="@color/theme_color_main"
        app:wheel_visible_item_count="5"
        android:layout_marginEnd="16dp" />

    <com.aigestudio.wheelpicker.widgets.WheelYearPicker
        android:id="@+id/date_year"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_weight="1"
        android:paddingRight="16dp"
        app:wheel_atmospheric="true"
        app:wheel_cyclic="true"
        app:wheel_item_align="right"
        app:wheel_item_space="16dp"
        app:wheel_item_text_size="30sp"
        app:wheel_selected_item_text_color="@color/theme_color_main"
        app:wheel_visible_item_count="5"
        android:layout_marginStart="16dp"
        android:paddingEnd="16dp" />

</LinearLayout>