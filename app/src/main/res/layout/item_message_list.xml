<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_notice_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/a226"
        android:textColor="#727171"
        android:textSize="@dimen/textSize12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:paddingLeft="24dp"
        android:paddingTop="12dp"
        android:paddingRight="24dp"
        android:paddingBottom="12dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">
        <TextView
            android:id="@+id/tv_notice_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/a227"
            android:drawablePadding="2dp"
            android:textColor="#727171"
            android:textSize="@dimen/textSize16" />

        <TextView
            android:id="@+id/tv_notice_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/a228"
            android:textColor="#727171"
            android:textSize="@dimen/textSize12" />

        <LinearLayout
            android:id="@+id/ll_notice_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:visibility="gone"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_notice_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/a229"
                android:textColor="@color/blue_1"
                android:textSize="@dimen/textSize12" />

            <ImageView
                android:id="@+id/iv_notice_img"
                android:layout_width="wrap_content"
                android:layout_marginLeft="12dp"
                android:src="@drawable/notice_open_img"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>