<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="24dp"
        android:paddingRight="16dp"
        android:gravity="center_horizontal"
        android:paddingBottom="24dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/a147"
            android:textColor="#353535"
            android:textSize="@dimen/textSize15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_gray_solid"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">


            <TextView
                android:id="@+id/tv_repay_amount_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="@string/a148"
                android:textColor="#3B3B3B"
                android:textSize="@dimen/textSize15"
                android:layout_marginStart="12dp" />

            <EditText
                android:id="@+id/et_repay_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:background="@null"
                android:hint="@string/a149"
                android:maxLength="8"
                android:inputType="numberDecimal"
                android:textColorHint="#B4B3B2"
                android:textSize="@dimen/textSize15"
                android:layout_marginStart="16dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_repay_amount_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="@string/a150"
            android:textColor="#FA8E71"
            android:textSize="@dimen/textSize12"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_input_total_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/a151"
                android:textColor="#D91B16"
                android:textSize="@dimen/textSize12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_gray_stroke"
                android:gravity="center"
                android:text="@string/dialog_cancel"
                android:textColor="#353535"
                android:textSize="@dimen/textSize18"
                android:layout_marginEnd="10dp" />

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.5"
                android:background="@drawable/shape_blue"
                android:gravity="center"
                android:text="@string/a131"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize18"
                android:layout_marginStart="10dp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>