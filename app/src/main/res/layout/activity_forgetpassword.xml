<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/tv_user_phone"
                android:layout_width="wrap_content"
                android:textSize="24sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black_1"
                android:layout_height="wrap_content"/>

            <com.u1.gocashm.view.InputView
                android:id="@+id/input_idcard_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hint="SSS"
                android:visibility="gone"
                app:title="Government Issued ID" />

            <com.u1.gocashm.view.InputView
                android:id="@+id/input_idcard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:hint="@string/input_idcard"
                app:maxLength="12"
                android:visibility="gone"
                app:title="Write your Government ID Number" />

            <com.u1.gocashm.view.InputView
                android:id="@+id/input_forget_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:hint="@string/set_new_password_hint"
                android:layout_marginTop="20dp"
                app:inputType="password"
                app:title="Enter new password" />

            <com.u1.gocashm.view.InputView
                android:id="@+id/input_forget_pwdconfirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:hint="@string/input_confirm_password"
                app:inputType="password"
                app:title="Repeat the new password" />

            <Button
                android:id="@+id/bt_forget_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_blue"
                android:text="@string/confirm"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>