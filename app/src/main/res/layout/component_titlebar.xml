<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/title_bar_ly"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/blue">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 左侧 -->
        <LinearLayout
            android:id="@+id/title_bar_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical|start"
            android:orientation="horizontal"
            android:layout_alignParentStart="true">

            <ImageButton
                android:id="@+id/title_left_image"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/titlebar_btn_height"
                android:padding="10dp"
                android:background="@color/transparent"
                android:clickable="false"
                android:scaleType="centerInside"
                android:visibility="visible"
                tools:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/title_left_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="gone"
                tools:text="@string/a117"
                android:paddingEnd="10dp"
                android:paddingStart="10dp" />
        </LinearLayout>
        <!-- 标题 -->

        <LinearLayout
            android:id="@+id/title_bar_center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize18"
                tools:text="@string/a118" />

            <ImageButton
                android:id="@+id/title_center_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/transparent"
                android:clickable="false"
                android:scaleType="center"
                android:visibility="gone"/>
        </LinearLayout>
        <!-- 标题 -->

        <LinearLayout
            android:id="@+id/title_bar_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|end"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/title_right_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center"
                android:scaleType="fitXY"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="visible"
                tools:text="@string/a119"
                android:paddingStart="10dp"
                android:paddingEnd="10dp" />

            <ImageButton
                android:id="@+id/title_right_image"
                android:layout_width="@dimen/titlebar_btn_width"
                android:layout_height="@dimen/titlebar_btn_height"
                android:layout_marginRight="5dp"
                android:background="@color/transparent"
                android:clickable="false"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:layout_marginEnd="5dp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>