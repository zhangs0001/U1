<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_input_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mustView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="*"
            android:gravity="top"
            android:textColor="@color/red"
            android:textSize="@dimen/textSize12"/>

        <TextView
            android:id="@+id/tv_input_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_input"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/bg_tv_grey"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_input_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_1"
            android:textSize="@dimen/textSize16"
            android:visibility="gone"
            android:paddingLeft="12dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingStart="12dp" />

        <com.u1.gocashm.view.BehaviorRecordEditText
            android:id="@+id/et_input_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="12dp"
            android:singleLine="true"
            android:textColor="@color/black_1"
            android:background="@null"
            android:textSize="@dimen/textSize16"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingStart="12dp" />

        <ImageView
            android:id="@+id/iv_pwd_show"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:src="@drawable/ic_pwd_hide"
            android:visibility="gone"
            android:layout_marginEnd="10dp" />

        <com.u1.gocashm.view.BehaviorRecordTextView
            android:id="@+id/tv_input_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="@string/please_select"
            android:paddingLeft="12dp"
            android:textColor="@color/black_1"
            android:singleLine="true"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textSize="@dimen/textSize16"
            android:visibility="gone"
            android:paddingStart="12dp" />

        <ImageView
            android:id="@+id/iv_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:src="@drawable/ic_down"
            android:visibility="gone"
            android:paddingEnd="10dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_input_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:layout_marginBottom="6dp"
        android:visibility="gone"/>

</LinearLayout>