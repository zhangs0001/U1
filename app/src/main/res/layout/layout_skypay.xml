<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/repay_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/repay_code_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:text="@string/a272"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize18" />

            <TextView
                android:id="@+id/repay_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/repay_code_title"
                android:layout_centerInParent="true"
                android:layout_marginTop="3dp"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize18" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_blue3"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/a273"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize18" />

            <TextView
                android:id="@+id/tv_get_barcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/shape_white"
                android:padding="8dp"
                android:text="@string/a274"
                android:textColor="#296DB8"
                android:textSize="@dimen/textSize18" />

            <LinearLayout
                android:id="@+id/ll_bar_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:background="@drawable/shape_white"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_bar_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:lineSpacingMultiplier="1.3"
                    android:text="@string/repay_hint1"
                    android:textColor="@color/black_1"
                    android:textSize="@dimen/textSize15" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/shape_blue_stroke2"
                    android:orientation="vertical"
                    android:paddingLeft="24dp"
                    android:paddingTop="16dp"
                    android:paddingRight="24dp"
                    android:paddingBottom="16dp"
                    android:paddingEnd="24dp"
                    android:paddingStart="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:scaleType="centerInside"
                            android:src="@drawable/seven_eleven_icon" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:scaleType="centerInside"
                            android:src="@drawable/ec_pay_img" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:scaleType="centerInside"
                            android:src="@drawable/gcash_img" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:scaleType="centerInside"
                            android:src="@drawable/mlhuillier_img" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:scaleType="centerInside"
                            android:src="@drawable/rd_shop_img" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:scaleType="centerInside"
                            android:src="@drawable/pay_maya_img" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:scaleType="centerInside"
                            android:src="@drawable/true_money_img" />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:drawableLeft="@drawable/shape_oval_blue_point"
                    android:drawablePadding="12dp"
                    android:text="@string/a275"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/textSize17"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/shape_oval_blue_point" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/shape_repay_bg"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/repay_hint2"
                        android:textColor="@color/black_1"
                        android:textSize="@dimen/textSize14" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:drawableLeft="@drawable/shape_oval_blue_point"
                    android:drawablePadding="12dp"
                    android:text="@string/a275"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/textSize17"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/shape_oval_blue_point" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/shape_repay_bg"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/repay_hint3"
                        android:textColor="@color/black_1"
                        android:textSize="@dimen/textSize14" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:drawableLeft="@drawable/shape_oval_blue_point"
                    android:drawablePadding="12dp"
                    android:text="@string/a276"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/textSize17"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/shape_oval_blue_point" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/shape_repay_bg"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/repay_hint4"
                        android:textColor="@color/black_1"
                        android:textSize="@dimen/textSize14" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:drawableLeft="@drawable/shape_oval_blue_point"
                    android:drawablePadding="12dp"
                    android:text="@string/a277"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/textSize17"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/shape_oval_blue_point" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/shape_repay_bg"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/repay_hint5"
                        android:textColor="@color/black_1"
                        android:textSize="@dimen/textSize14" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:drawableLeft="@drawable/shape_oval_blue_point"
                    android:drawablePadding="12dp"
                    android:text="@string/a278"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/textSize17"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/shape_oval_blue_point" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/shape_repay_bg"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/repay_hint6"
                        android:textColor="@color/black_1"
                        android:textSize="@dimen/textSize14" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:drawableLeft="@drawable/shape_oval_blue_point"
                    android:drawablePadding="12dp"
                    android:text="@string/a279"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/textSize17"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/shape_oval_blue_point" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/shape_repay_bg"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/repay_hint7"
                        android:textColor="@color/black_1"
                        android:textSize="@dimen/textSize14" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:drawableLeft="@drawable/shape_oval_blue_point"
                    android:drawablePadding="12dp"
                    android:text="@string/a280"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/textSize17"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/shape_oval_blue_point" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/shape_repay_bg"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/repay_hint8"
                        android:textColor="@color/black_1"
                        android:textSize="@dimen/textSize14" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:drawableLeft="@drawable/shape_oval_blue_point"
                    android:drawablePadding="12dp"
                    android:text="@string/a281"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/textSize17"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/shape_oval_blue_point" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/shape_repay_bg"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/repay_hint9"
                        android:textColor="@color/black_1"
                        android:textSize="@dimen/textSize14" />
                </LinearLayout>

                <Button
                    android:id="@+id/bt_other_help"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    android:background="@drawable/shape_blue"
                    android:text="@string/repay_other_help"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/a213"
                    android:textColor="@color/blue_1"
                    android:textSize="@dimen/textSize10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="@string/a214"
                    android:textColor="@color/blue_1"
                    android:textSize="@dimen/textSize10" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
